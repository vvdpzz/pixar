<form id="new-question" name="question">
  <fieldset>
    <legend>New question</legend>
    <!-- title -->
    <div class="clearfix">
      <label for="title">标题</label>
      <div class="input">
        <input class="xxlarge" size="30" type="text" name="title" id="title" value="<%= title %>" >
      </div>
    </div>
    <!-- content -->
    <div class="clearfix">
      <label for="content"></label>
      <div class="input">
        <textarea class="xxlarge" rows="10" name="content" id="content" value="<%= content %>"></textarea>
        <span class="help-block">
          Block of help text to describe the field above if need be.
        </span>
      </div>
    </div>
    <!-- rules_list -->
    <div class="clearfix">
      <label id="rules_list">竞标规则</label>
      <div class="input">
        <ul class="inputs-list">
          <li>
            <label>
              <input type="checkbox" name="rules_list" id="rules_1">
              <span>In the case of duplicated entries, the first entry submitted will win</span>
            </label>
          </li>
          <li>
            <label>
              <input type="checkbox" name="rules_list" id="rules_2">
              <span>Entries should include reference images</span>
            </label>
          </li>
          <li>
            <label>
              <input type="checkbox" name="rules_list" id="rules_3">
              <span>Entries should be no less than 200 words</span>
            </label>
          </li>
          <li>
            <label>
              <input type="checkbox" name="rules_list" id="rules_4">
              <span>Only allow verified users to participate</span>
            </label>
          </li>
          <li>
            <label>
              <input type="checkbox" name="rules_list" id="rules_0">
              <span>Additional rules</span>
            </label>
          </li>
        </ul>
        <span class="help-block">
          <strong>Note:</strong> Labels surround all the options for much larger click areas and a more usable form.
        </span>
      </div>
    </div>
    <!-- credit -->
    <div class="clearfix">
      <label id="optionsRadio">赏金</label>
      <div class="input">
        <label>
          <input type="radio" checked="" name="credit" value="1">
          <span>$ 1</span>
        </label>
        <label>
          <input type="radio" name="credit" value="2">
          <span>$ 2</span>
        </label>
      </div>
    </div>
    <div class="actions">
      <button type="submit" class="btn primary">Create Question</button>&nbsp;<a href="#/index" class="btn">Back</a>
    </div>
  </fieldset>
</form>
<script type="text/javascript" charset="utf-8">
setTimeout(function(){
  Pixar.contentEditor = new nicEditor({
      buttonList:['bold','italic','underline', 'strikethrough', 'ol', 'ul', 'hr']}).panelInstance('content');
  },0);
</script>
